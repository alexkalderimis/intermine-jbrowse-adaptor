%h2 Sequence for #{ name }:#{segment[:start]}..#{segment[:end]}

#sequence
  %ol.basepairs
    - sequence.each_char do |base|
      %li{:class => "base #{ base.downcase }"}= base
    .clear-fix

- s = segment[:start].to_i
- e = segment[:end].to_i
- seg_length = e - s

%ul.pager
  - if s - seg_length > 1
    %li.previous
      %a{:href => "/#{ name }/residues?start=#{ s - seg_length }&end=#{ e - seg_length }"}
        previous
  %li.next
    %a{:href => "/#{ name }/residues?start=#{ s + seg_length }&end=#{ e + seg_length }"}
      next
